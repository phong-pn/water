<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/drink_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_drink_container_gradient"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/beer_icon" />

    <TextView
        android:textSize="12sp"
        style="@style/text.Blue"
        android:id="@+id/detail_drink_icon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/drink_icon_iv"
        app:layout_constraintStart_toStartOf="@+id/drink_icon_iv"
        app:layout_constraintTop_toBottomOf="@+id/drink_icon_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>