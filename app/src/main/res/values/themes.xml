
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Water" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/light_violet</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/pink_on_error</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/blue</item>

    </style>

    <style name="Theme.Water.Greeting" parent="Theme.Water">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@drawable/wave_background</item>
    </style>

    <style name="Theme.Water.Splash" parent="Theme.Water">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>